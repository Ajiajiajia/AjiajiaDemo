<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--home模块的fragment-->
    <style name="txt_home_module">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:textColor">@color/txt_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>

    </style>
    
    
    <!--ToolBar style-->
    <style name="base_toolbar"
        parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:paddingTop">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/txt_white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimary">@color/txt_white</item>
    </style>
    
    
</resources>
