<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.heaijia.ajiajia.activity.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_content"
        android:layout_above="@id/view_divider"
        >

    </FrameLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/ly_bottom_menu"
        android:background="@color/colorPrimary"
        />

    <LinearLayout
        android:id="@+id/ly_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:background="#2F9DD5e8">

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ly_menu_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_tab_home"/>

            <TextView
                android:id="@+id/txt_tab_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主页"
                android:textSize="12sp"
                android:textColor="@drawable/txt_menu_selector"/>

        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ly_menu_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_message"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_tab_message"/>

            <TextView
                android:id="@+id/txt_tab_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chat"
                android:textSize="12sp"
                android:textColor="@drawable/txt_menu_selector"/>

        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ly_menu_mine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_mine"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_tab_mine"/>

            <TextView
                android:id="@+id/txt_tab_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="12sp"
                android:textColor="@drawable/txt_menu_selector"/>

        </LinearLayout>


    </LinearLayout>




</RelativeLayout>
